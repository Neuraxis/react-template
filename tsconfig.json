{
    "compilerOptions": {
        "importHelpers": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "lib": [
            "es5",
            "es6",
            "es7",
            "dom"
        ],
        "baseUrl": "./src/",
        "paths": {
            "@components/*": [
                "components/*"
            ],
            "@screens/*": [
                "screens/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@enums/*": [
                "enums/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "reportFiles": [
            "./src/**/*"
        ]
    }
}